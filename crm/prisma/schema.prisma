generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                 String   @id
  name               String
  type               String?
  parentId           String?  @map("parent_id")
  billingStreet      String?  @map("billing_street")
  billingCity        String?  @map("billing_city")
  billingState       String?  @map("billing_state")
  billingPostalCode  String?  @map("billing_postal_code")
  billingCountry     String?  @map("billing_country")
  phone              String?
  website            String?
  industry           String?
  annualRevenue      Float?   @map("annual_revenue")
  numberOfEmployees  Int?     @map("number_of_employees")
  description        String?
  rating             String?
  accountSource      String?  @map("account_source")
  accountStatus      String?  @map("account_status")
  libPic             String?  @map("lib_pic")
  lastContactDate    String?  @map("last_contact_date")
  execTouchpoint     String?  @map("exec_touchpoint")
  supplyChain        String?  @map("supply_chain")
  numberOfProjects   Int?     @map("number_of_projects")
  totalRevenue       Float?   @map("total_revenue")
  note               String?
  target             String?
  highestTitle       String?  @map("highest_title")
  national           String?
  accountIdCustom    String?  @map("account_id_custom")
  juristicId         String?  @map("juristic_id")
  createdDate        DateTime? @map("created_date")
  lastModifiedDate   DateTime? @map("last_modified_date")

  parent   Account?  @relation("AccountParent", fields: [parentId], references: [id])
  children Account[] @relation("AccountParent")
  contacts Contact[]

  @@map("accounts")
}

model Contact {
  id                    String   @id
  accountId             String?  @map("account_id")
  salutation            String?
  firstName             String?  @map("first_name")
  lastName              String?  @map("last_name")
  middleName            String?  @map("middle_name")
  email                 String?
  phone                 String?
  mobilePhone           String?  @map("mobile_phone")
  title                 String?
  department            String?
  mailingStreet         String?  @map("mailing_street")
  mailingCity           String?  @map("mailing_city")
  mailingState          String?  @map("mailing_state")
  mailingPostalCode     String?  @map("mailing_postal_code")
  mailingCountry        String?  @map("mailing_country")
  leadSource            String?  @map("lead_source")
  description           String?
  hasOptedOutOfEmail    Boolean  @default(false) @map("has_opted_out_of_email")
  doNotCall             Boolean  @default(false) @map("do_not_call")
  contactStatus         String?  @map("contact_status")
  executiveOrNot        Boolean  @default(false) @map("executive_or_not")
  rating                String?
  titleFormat           String?  @map("title_format")
  worthFollowing        Boolean  @default(false) @map("worth_following")
  personCountry         String?  @map("person_country")
  doNotSendWhitepaper   Boolean  @default(false) @map("do_not_send_whitepaper")
  reportsToId           String?  @map("reports_to_id")
  createdDate           DateTime? @map("created_date")
  lastModifiedDate      DateTime? @map("last_modified_date")

  account    Account?  @relation(fields: [accountId], references: [id])
  reportsTo  Contact?  @relation("ContactReportsTo", fields: [reportsToId], references: [id])
  reports    Contact[] @relation("ContactReportsTo")
  emailRecipients EmailRecipient[]

  @@map("contacts")
}

model CustomFieldDefinition {
  id          Int      @id @default(autoincrement())
  entity      String
  fieldKey    String   @map("field_key")
  label       String
  fieldType   String   @map("field_type")
  optionsJson String?  @map("options_json")
  isRequired  Boolean  @default(false) @map("is_required")
  showInTable Boolean  @default(false) @map("show_in_table")
  sortOrder   Int      @default(0) @map("sort_order")
  createdAt   DateTime @default(now()) @map("created_at")

  values CustomFieldValue[]

  @@unique([entity, fieldKey])
  @@map("custom_field_definitions")
}

model CustomFieldValue {
  id                Int      @id @default(autoincrement())
  fieldDefinitionId Int      @map("field_definition_id")
  entity            String
  recordId          String   @map("record_id")
  valueText         String?  @map("value_text")
  valueNumber       Float?   @map("value_number")
  valueBoolean      Int?     @map("value_boolean")
  updatedAt         DateTime @default(now()) @map("updated_at")

  fieldDefinition CustomFieldDefinition @relation(fields: [fieldDefinitionId], references: [id], onDelete: Cascade)

  @@unique([fieldDefinitionId, recordId])
  @@map("custom_field_values")
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  passwordHash String    @map("password_hash")
  isActive     Boolean   @default(true) @map("is_active")
  createdAt    DateTime  @default(now()) @map("created_at")
  lastLoginAt  DateTime? @map("last_login_at")

  sessions Session[]

  @@map("users")
}

model Session {
  id        String   @id
  userId    Int      @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model EmailSender {
  id           Int      @id @default(autoincrement())
  displayName  String   @map("display_name")
  email        String   @unique
  smtpUser     String   @map("smtp_user")
  smtpPassword String   @map("smtp_password")
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")

  campaigns EmailCampaign[]

  @@map("email_senders")
}

model EmailTemplate {
  id        Int      @id @default(autoincrement())
  name      String
  subject   String
  bodyHtml  String   @map("body_html")
  createdBy String?  @map("created_by")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")

  campaigns EmailCampaign[]

  @@map("email_templates")
}

model EmailCampaign {
  id             Int      @id @default(autoincrement())
  templateId     Int?     @map("template_id")
  senderId       Int      @map("sender_id")
  subject        String
  filterJson     String?  @map("filter_json")
  recipientCount Int      @default(0) @map("recipient_count")
  status         String   @default("draft")
  sentAt         DateTime? @map("sent_at")
  createdAt      DateTime @default(now()) @map("created_at")

  template   EmailTemplate? @relation(fields: [templateId], references: [id])
  sender     EmailSender    @relation(fields: [senderId], references: [id])
  recipients EmailRecipient[]

  @@map("email_campaigns")
}

model EmailRecipient {
  id           Int      @id @default(autoincrement())
  campaignId   Int      @map("campaign_id")
  contactId    String?  @map("contact_id")
  emailAddress String   @map("email_address")
  trackingId   String   @unique @map("tracking_id")
  status       String   @default("pending")
  sentAt       DateTime? @map("sent_at")
  errorMessage String?  @map("error_message")

  campaign EmailCampaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  contact  Contact?      @relation(fields: [contactId], references: [id])
  events   EmailEvent[]

  @@map("email_recipients")
}

model EmailEvent {
  id         Int      @id @default(autoincrement())
  trackingId String   @map("tracking_id")
  eventType  String   @map("event_type")
  urlClicked String?  @map("url_clicked")
  ipAddress  String?  @map("ip_address")
  userAgent  String?  @map("user_agent")
  occurredAt DateTime @default(now()) @map("occurred_at")

  recipient EmailRecipient @relation(fields: [trackingId], references: [trackingId], onDelete: Cascade)

  @@map("email_events")
}
